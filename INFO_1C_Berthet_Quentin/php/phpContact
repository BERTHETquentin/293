

<?php
// le code me fonctionne pas mais je ne sais pas ou il y a une erreur 

if ($_SERVER["REQUEST_METHOD"] == "POST") {
  // Récupérer les valeurs du formulaire
  $nom = $_POST["nom"];
  $age = $_POST["age"];
  $courriel = $_POST["courriel"];
  $date = $_POST["date"];
  $choix = implode(", ", $_POST["choix"]);
  $message = $_POST["message"];

  // Adresse mail
  $destinataire = "quentin@berthet.ch";

  // Sujet de le mail
  $sujet = "Nouveau message depuis le formulaire de contact";

  // Contenu de le mail
  $contenu = "Nom: $nom\n";
  $contenu .= "Courriel: $courriel\n";
  $contenu .= "Date: $date\n";
  $contenu .= "Choix: $choix\n";
  $contenu .= "Message:\n$message";

  // En-têtes de le mail
  $headers = "From: $nom <$courriel>\r\n";
  $headers .= "Reply-To: $courriel\r\n";

  // Envoyer le mail
  if (mail($destinataire, $sujet, $contenu, $headers)) {
    echo "Votre message a été envoyé avec succès.";
  } else {
    echo "Une erreur s'est produite lors de l'envoi de votre message.";
  }
}
?>
